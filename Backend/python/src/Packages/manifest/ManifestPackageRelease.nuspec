<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <!-- Package information -->
    <id>ManifestPackageRelease</id>
    <version>1.0.0</version>
    <authors>author</authors>
    <owners>owner</owners>
    <description>A NuGet package ready for uploading to fabric.</description>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
  </metadata>
  <files>
    <!-- Include the XML and BE files -->
    <file src="WorkloadManifest.xml" target="BE\WorkloadManifest.xml" />
    <file src="Item1.xml" target="BE\Item1.xml" />
    
    <!-- Include FE files explicitly to avoid wildcard issues -->
    <file src="..\..\..\..\Frontend\Package\Item1.json" target="FE\Item1.json" />
    <file src="..\..\..\..\Frontend\Package\Product.json" target="FE\Product.json" />
    
    <!-- Include assets directory with proper wildcard pattern -->
    <file src="..\..\..\..\Frontend\Package\assets\**\*" target="FE\assets\" />
  </files>
</package>
